alias pyvs="pyenv virtualenvs --bare"
alias pyv="pyenv virtualenv"
alias pyv-d="pyenv virtualenv-delete"

alias poet-init="poetry init"
alias poet-i="poetry install"
alias poet-a="poetry add"
