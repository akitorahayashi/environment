[init]
	defaultBranch = main

[alias]
    ini = init
    cl = clone

    co = checkout
    co-m = checkout main
    b = branch
    br = branch
    cln = remote prune origin

    p = pull
    pl = pull
    pl-rb = pull --rebase

    a = add
    ad = add
    df = diff
    ts = status
    
    sh = stash
    sh-p = stash pop
    sh-d = stash drop
    rs = reset
    rs-h = reset --hard
    rs-h-m = reset --hard origin/main
    rm-c = rm --cached

    c = commit
    cm = commit
    amd = !git add . && git commit --amend --no-edit

    ps = push
    ps-u-o = push -u origin
    ps-o = push origin
    ps-u-m = push --set-upstream origin main
    ps-f-l = push --force-with-lease

    tg = tag
    tg-ls = tag -l -n
    tg-ls-rm = fetch --tags && git tag -l -n
    tg-d = tag -d
    tg-d-rm = push --delete origin

    mr = merge
    lg = log --oneline --graph --decorate --all -n 10

[core]
	excludesfile = ~/.gitignore_global
