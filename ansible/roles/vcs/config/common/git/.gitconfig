[init]
	defaultBranch = main

[alias]
    ini = init
    cl = clone

    co = checkout
    co-m = checkout main
    b = branch
    br = branch
    cln = remote prune origin
    ft = fetch

    p = pull
    p-r = pull --rebase
    pl = pull
    pl-r = pull --rebase

    a = add
    ad = add
    df = diff
    ts = status
    
    sh = stash
    sh-p = stash pop
    sh-d = stash drop
    rs = reset
    rs-s = reset --soft
    rs-h = reset --hard
    rs-h-m = reset --hard origin/main
    rt = restore
    rm-c = rm --cached

    c = !git add . && git commit -m
    cm = !git add . && git commit -m
    amd = !git add . && git commit --amend --no-edit
    sb = submodule
    sb-ini = submodule init
    sb-u = submodule update --init --remote --recursive
    sb-a = submodule add
    sb-d = submodule deinit

    ps = push
    ps-u-o = push -u origin
    ps-o = push origin
    ps-u-m = push --set-upstream origin main
    ps-f-l = push --force-with-lease
    sw = show

    tg = tag
    tg-ls = tag -l -n
    tg-ls-rm = !git fetch --tags && git tag -l -n
    tg-d = tag -d
    tg-d-rm = push --delete origin

    mr = merge
    rb = rebase
    l = log --oneline --graph --decorate --all -n 15
    lg = l

[core]
	excludesfile = ~/.gitignore_global
